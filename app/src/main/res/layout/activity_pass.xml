<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="330dp"
    android:layout_height="509dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="448dp"
        android:orientation="vertical"
        android:background="@color/r105"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/imageDV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mycoolman" />

        <ProgressBar
            android:id="@+id/prgbar"
            android:background="@color/r100"
            android:indeterminateDuration="@integer/material_motion_duration_short_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:indeterminateBehavior="repeat" />
        <!--android:indeterminateDrawable="@drawable/progressbar_style"-->

        <LinearLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="28dp">

            <EditText
                android:id="@+id/password1"
                android:layout_marginEnd="22dp"
                android:layout_width="67dp"
                android:layout_height="81dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="text"
                android:background="@color/white"
                android:text=""
                android:textColor="#000000"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="48sp" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="67dp"
                android:layout_height="81dp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="text"
                android:background="@color/white"
                android:text=""
                android:textColor="#000000"
                android:textSize="48sp" />

            <EditText
                android:id="@+id/password3"
                android:layout_marginStart="22dp"
                android:layout_width="67dp"
                android:layout_height="81dp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="text"
                android:background="@color/white"
                android:text=""
                android:textColor="#000000"
                android:textSize="48sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>