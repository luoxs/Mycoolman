<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/r142"
    tools:context=".HomeActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/r105" />

    <ImageView
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/type"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/btcack"
        android:layout_width="9dp"
        android:layout_height="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/back" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/signal" />

    <ImageButton
        android:id="@+id/btsetting"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="221dp"
        android:background="@drawable/setting"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="229dp"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/recreationalsearies" />


    <TextView
        android:layout_width="172dp"
        android:layout_height="70dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="186dp"
        android:lines="4"
        android:text="To connect your MyCoolman\nwith Bluetooth\nensure the cooler is set to\nBluetooth ON"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/btscanqr"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/scanqr" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="353dp"
        android:lines="2"
        android:text="Or use the phone menue\nand search for device"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/btBluetooth"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="409dp"
        android:background="@drawable/bluetooth" />

</RelativeLayout>