<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#168AD6"
        android:orientation="horizontal"
        android:layout_weight="50">

        <ImageButton
            android:id="@+id/btReturn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="#168AD6"
            android:scaleType="fitEnd"
            android:src="@drawable/back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageTitle"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:src="@drawable/type"
            android:scaleType="fitEnd"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="#168AD6"
            android:scaleType="fitCenter"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="240"
        android:layout_marginTop="10dp"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#9EDAE1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:textSize="20dp"
                android:text="Preferrable Language"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:text="English(UK)"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9EDAE1"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="18"
                android:gravity="center_vertical"
                android:text="Fan"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="Auto/" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Manual" />

            <ImageButton
                android:id="@+id/btCheckFan"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="6"
                android:background="#9EDAE1"
                android:scaleType="fitCenter"
                android:src="@drawable/detail"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9EDAE1"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:text="Light"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:text="Color"/>

            <ImageButton
                android:id="@+id/changelight"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:background="#9EDAE1"
                android:scaleType="fitCenter"
                android:src="@drawable/detail"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="0dp"
            android:background="#9EDAE1"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:text="Temperature Scale"/>
            <Switch
                android:id="@+id/switchUnit"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:textOff="Celsius"
                android:textOn="Fahrenheit"
                android:showText="true"
                android:track="@drawable/unitcheck"
                android:thumb="@drawable/unittrack"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9EDAE1"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:text="Timer" />

            <ImageButton
                android:id="@+id/setTimer"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:background="#9EDAE1"
                android:scaleType="fitCenter"
                android:src="@drawable/detail"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#168AD6"
            android:text="Reset to Factory Settings"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160" />
</LinearLayout>
